extends layout.pug

block content
	body
		script(defer src='/scripts/basketShow.js')
		header.header
			h1.pageTitle 
				a.pageTitleLink(href = '/') Richmond Paper Supply
				a.powered-by(href = '/') Progressive Web App
				button#butInstall(aria-label = 'Install')
				button#butRefresh(aria-label = 'Refresh')
		div.pageInfo
			div.card
				p.card-text-title
					b Some text about the contents of this page
		form#customerForm(name = 'form' class = 'form-data' method = 'post' onsubmit = 'sendData(event); sendBasket(); clearBasket()')
			table.tab
				tr.row
					td.col
						label(for='name') Name :
					td.col
						input(class = 'input' id = 'name' name = 'name' type = 'text' value = '' required)
				tr.row
					td.col
						label(for='email') Email :
					td.col
						input(class = 'input' id = 'email' name = 'email' type = 'email' value = '' required)
				tr.row
					td.col
						label(for='phone') Phone Number :
					td.col
						input(class = 'input' id = 'phone' name = 'phone' type = 'number' value = '' required)
				
				tr.row
					td.col
						label(for='time') Pickup/Delivery Time :
					td.col
						input(class = 'input' id = 'time' name = 'time' type = 'time' value = '' required)
				br
			div.row2
				div.pageInfo
					div.card
						p.card-text-title 
							b Your Order : 
				ul#listForBasket.listForBasket
			
				input#butSubmit(type = 'submit' value = 'Send Order')
