// layout
doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		title Richmond: #{ title }
		link(type = 'text/css' rel = 'Stylesheet' href = '/styles/style.css')
		link(rel='icon' href='/images/rich.ico' type='image/x-icon')
		link(rel='manifest' href='/manifest.json')
		link(rel='apple-touch-icon' href='/images/icons/icon-152.png')
		link(href='https://fonts.googleapis.com/css2?family=Open+Sans&display=swap' rel='stylesheet')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		meta(name='apple-mobile-web-app-capable' content='yes')
		meta(name='apple-mobile-web-app-status-bar-style' content='black')
		meta(name='apple-mobile-web-app-title' content='Richmond PWA')
		meta(name='description' content='Richmond Paper Web App')
		meta(name='theme-color' content='#df78ef')
		link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
		link(type='text/css' rel='stylesheet' href='styles/materialize.css'  media='screen,projection')
		script(defer src='/scripts/luxon-1.11.4.js')
		script(defer type='text/javascript' src='scripts/materialize.js')
		script(defer src='/scripts/app.js')
		script(defer src='/scripts/install.js')
		link(rel='stylesheet' type='text/css' href='/styles/mdtoast.css')
		script(defer type='text/javascript' src='/scripts/mdtoast.js')
		script(src="https://www.paypal.com/sdk/js?client-id=Af8BTjxaPJLgD3GWXiM_zaLw55vuS6dnc2BAcnBy2_E9BxW3pDQbUtDXcO4akBU5CyWxHYn4gk8PiY0B&currency=GBP")
		script(defer) if ('serviceWorker' in navigator) {window.addEventListener('load', () => {navigator.serviceWorker.register('/service-worker.js').then((reg) => {console.log('Service worker registered.', reg);});});}
	body
		block content
	
	footer(class = 'page-footer purple lighten-2')
		div(class = 'container')
			h5 Richmond Paper Supply Co Ltd
			p Information about the company here 
				br
				br
				a(class = 'btn' href = '/privacy') Link to privacy policy
					i(class = 'material-icons left') assignment
			br
		div(class = 'footer-copyright purple')
			p(style = 'padding-left:2%') 2020 RPS by 
				i.material-icons.left copyright
				a(href = 'https://www.github.com/MrGhostlyOrb') Ben Cooper
					i.material-icons.right code
			
				

