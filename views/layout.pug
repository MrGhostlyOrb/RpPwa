// layout
doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		title Richmond: #{ title }
		link(type = 'text/css' rel = 'Stylesheet' href = '/styles/style.css')
		link(rel='icon' href='/images/rich.ico' type='image/x-icon')
		link(rel='manifest' href='/manifest.json')
		link(rel='apple-touch-icon' href='/images/icons/icon-152.png')
		link(href='https://fonts.googleapis.com/css2?family=Open+Sans&display=swap' rel='stylesheet')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		meta(name='apple-mobile-web-app-capable' content='yes')
		meta(name='apple-mobile-web-app-status-bar-style' content='black')
		meta(name='apple-mobile-web-app-title' content='Richmond PWA')
		meta(name='description' content='Richmond Paper Web App')
		meta(name='theme-color' content='#df78ef')
		script(defer src='https://code.jquery.com/jquery-3.3.1.js')
		script(src = 'http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js', type='text/javascript')
		script(defer src='/scripts/luxon-1.11.4.js')
		script(defer src='/scripts/app.js')
		script(defer src='/scripts/install.js')
		script(defer) if ('serviceWorker' in navigator) {window.addEventListener('load', () => {navigator.serviceWorker.register('/service-worker.js').then((reg) => {console.log('Service worker registered.', reg);});});}
	body
		block content
	
	footer
		p @2020 by MrGhostlyOrb
		button(onclick = 'showBasket()') showbasket
		button(onclick = 'clearBasket()') clearbasket
				

