extends layout.pug

block content
	body(onload = 'checkBasket()')
		nav(id = 'nav' class = 'nav-extended purple')
			div(class='nav-wrapper')
				a(href='/' class='card-content purple' id = 'title') üìéÔ∏è Richmond Paper Supply
					ul(class='right hide-on-med-and-down')
						li
							a(id = 'butInstall' aria-label = 'install' class = 'waves-effect')
								i(class='material-icons') add_circle_outline
						li
							a(id = 'butBasket' aria-label = 'basket' class = 'waves-effect')
								i(class='material-icons') shopping_basket
						li
							a(id = 'butRefresh' aria-label = 'refresh' class = 'waves-effect')
								i(class='material-icons') notifications
				div(class='nav-content' id = 'tab-mob')
					ul(class='tabs tabs-transparent purple lighten-1')
						li(class='tab waves-effect')
							a(href='/') Home
						li(class='tab disabled waves-effect')
							a(href='/option1' class = 'active') Option 1
						li(class='tab waves-effect')
							a(href='/option2') Option 2
						li(class='tab waves-effect')
							a(href='/option3') Option 3
		div.pageInfo
			div.card
				div.card-image
					img.responsive-img(src=`${productImage}`)
					span.card-title #{productName}
				div.card-content
					p Description : #{ productDescription }
					br
					p Product Number : #{ product }
					br
					label(for = 'inp') Quantity
					input.input(name = 'inp' id = 'inp'+`${product}` min = '1' max = '999' value = '1')
				div.card-action
					a(href = '#' onclick = 'addJson("'+`${product}`+'");checkBasket();getValues()' class = 'btn purple waves-effect') Add to Basket
					
		div(class='fixed-action-btn' id = 'fabSpan' onclick = 'window.location.href = "/basket"')
			div(class='numberCircle' id = 'numberCircle' onclick = 'window.location.href = "/basket"')
			a(class='btn-floating btn-large purple waves-effect waves-circle hoverable')
				i(class='large material-icons') shopping_basket
	
