extends layout.pug

block content
		script(defer src = '/scripts/search.js')
		nav(id = 'nav' class = 'nav-extended purple')
			div(class='nav-wrapper')
				ul(class='right hide-on-med-and-down')
					li
						a.waves-effect.tooltipped(href = "/price-list" data-tooltip='Price List')
							i.material-icons list
						li
							a(id = 'butInstall' aria-label = 'install' class = 'waves-effect tooltipped' data-tooltip='Install')
								i(class='material-icons') add_circle_outline
						li
							a(id = 'butBasket' aria-label = 'basket' class = 'waves-effect tooltipped' data-tooltip='Basket')
								i(class='material-icons') shopping_basket
						li
							a(id = 'butRefresh' aria-label = 'refresh' class = 'waves-effect tooltipped' data-tooltip='Notifications')
								i(class='material-icons') notifications
						li
							a(id = 'butSearch' aria-label = 'refresh' class = 'waves-effect tooltipped' onclick = 'location.href = "/search"' data-tooltip='Search')
								i(class='material-icons') search
				div(class='card-content purple' id = 'title')
					i(onclick = 'window.history.back();' class = 'material-icons left' style = 'padding-left:1%;' id = 'back') arrow_back
					h1.normal
						a(href = "/") üìéÔ∏è Richmond Paper Supply

				div(class='nav-content' id = 'tab-mob')
					ul(class='tabs tabs-transparent purple lighten-1')
						li(class='tab waves-effect')
							a(href='/') Home
						li(class='tab waves-effect')
							a(href='/option1') Products
		div.container#searchPage
			div.card
				div.card-content
					h2(style = "font-size:2.28rem") Search
						i.material-icons.right search
					form(method = 'POST' id = 'searchForm')
						div.input-field
							label(for = 'search')
							input.validate(type = 'text' id = 'search' placeholder = 'Search Query' required)
					ul#results.collection.dark #{ results }
						
					
				
			
							



